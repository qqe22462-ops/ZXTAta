-- โหลด Library สำหรับสร้างเมนู (ใช้ตัวอย่างจาก Rayfield Library)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Ninja Script Menu",
   LoadingTitle = "กำลังโหลดระบบ...",
   LoadingSubtitle = "by Gemini AI",
})

local Tab = Window:CreateTab("Main Hacks", 4483362458) -- สร้างหน้าเมนูหลัก

-- [บรรทัดที่ 1] ระบบ Speed ปรับได้ไม่เกิน 500
Tab:CreateSlider({
   Name = "WalkSpeed (ความเร็ว)",
   Info = "ปรับความเร็วตัวละคร (สูงสุด 500)",
   Range = {16, 500},
   Increment = 1,
   CurrentValue = 16,
   Flag = "SpeedSlider",
   Callback = function(Value)
       -- ใส่คำสั่งปรับความเร็วตัวละครจริงที่นี่
       game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
   end,
})

-- [บรรทัดที่ 2] ระบบกระโดดไม่จำกัด (Toggle On/Off)
Tab:CreateToggle({
   Name = "Infinite Jump (กระโดดไม่จำกัด)",
   CurrentValue = false,
   Flag = "InfJump",
   Callback = function(Value)
       _G.InfJumpEnabled = Value
       -- ระบบดักจับการกด Spacebar
       game:GetService("UserInputService").JumpRequest:Connect(function()
           if _G.InfJumpEnabled then
               game.Players.LocalPlayer.Character:FindFirstChildOfClass('Humanoid'):ChangeState("Jumping")
           end
       end)
   end,
})

-- [บรรทัดที่ 3] ระบบ Teleport ไปหาผู้เล่น
local SelectedPlayer = ""
Tab:CreateDropdown({
   Name = "เลือกผู้เล่นที่จะวาร์ปไปหา",
   Options = {"เลือกชื่อผู้เล่น..."}, -- ตัวอย่างเริ่มต้น
   CurrentOption = "",
   Callback = function(Option)
       SelectedPlayer = Option
   end,
})

Tab:CreateButton({
   Name = "Teleport Now (วาร์ปทันที)",
   Callback = function()
       if SelectedPlayer ~= "" then
           local target = game.Players:FindFirstChild(SelectedPlayer)
           if target and target.Character then
               game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = target.Character.HumanoidRootPart.CFrame
           end
       end
   end,
})

-- ฟังก์ชันเสริม: อัปเดตรายชื่อผู้เล่นในเซิร์ฟเวอร์อัตโนมัติ
spawn(function()
    while wait(5) do
        local players = {}
        for _, v in pairs(game.Players:GetPlayers()) do
            if v.Name ~= game.Players.LocalPlayer.Name then
                table.insert(players, v.Name)
            end
        end
        -- โค้ดส่วนนี้ขึ้นอยู่กับ Library ว่ารองรับการ Refresh Dropdown หรือไม่
    end
end)
