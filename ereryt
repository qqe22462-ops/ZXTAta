local UserInputService = game:GetService("UserInputService")
local player = game.Players.LocalPlayer
local button = script.Parent

-- ตั้งค่าที่ต้องการปรับ
local walkSpeedNormal = 16
local walkSpeedFast = 100 -- ปรับความเร็วตรงนี้
local toggleKey = Enum.KeyCode.Q -- ปุ่มบนคีย์บอร์ดที่ใช้เปิด/ปิด (ในที่นี้คือปุ่ม Q)

local isEnabled = false

-- ฟังก์ชันสำหรับสลับสถานะ
local function toggleSpeed()
	local character = player.Character
	if not character then return end
	local humanoid = character:FindFirstChildOfClass("Humanoid")
	if not humanoid then return end
	
	isEnabled = not isEnabled
	
	if isEnabled then
		humanoid.WalkSpeed = walkSpeedFast
		button.Text = "Speed: ON"
		button.BackgroundColor3 = Color3.fromRGB(0, 255, 0) -- สีเขียว
	else
		humanoid.WalkSpeed = walkSpeedNormal
		button.Text = "Speed: OFF"
		button.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- สีแดง
	end
end

-- 1. ตรวจจับการคลิกที่ปุ่มบนหน้าจอ
button.MouseButton1Click:Connect(toggleSpeed)

-- 2. ตรวจจับการกดปุ่มบนคีย์บอร์ด (Hotkey)
UserInputService.InputBegan:Connect(function(input, gameProcessed)
	if not gameProcessed and input.KeyCode == toggleKey then
		toggleSpeed()
	end
end)

-- แจ้งเตือนในช่อง Output เมื่อสคริปต์เริ่มทำงาน
print("สคริปต์ Speed Toggle พร้อมใช้งาน! (กดปุ่มบนจอ หรือกด Q)")
