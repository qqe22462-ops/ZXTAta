-- ‡πÄ‡∏°‡∏ô‡∏π‡∏ô‡∏¥‡∏ô‡∏à‡∏≤‡∏´‡∏°‡∏µ‡πà‡∏Å‡∏£‡∏≠‡∏ö‡∏™‡∏µ‡∏°‡πà‡∏ß‡∏á
local Library = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local SpeedInput = Instance.new("TextBox")
local TPButton = Instance.new("TextButton")
local ESPButton = Instance.new("TextButton")
local LockButton = Instance.new("TextButton")
local UICorner = Instance.new("UICorner")

-- ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠‡∏´‡∏•‡∏±‡∏Å
Library.Name = "NinjaMenuThai"
Library.Parent = game.CoreGui

MainFrame.Name = "MainFrame"
MainFrame.Parent = Library
MainFrame.BackgroundColor3 = Color3.fromRGB(110, 30, 150) -- ‡∏™‡∏µ‡∏°‡πà‡∏ß‡∏á‡πÄ‡∏Ç‡πâ‡∏°‡∏´‡∏°‡∏µ‡πà‡∏Å‡∏£‡∏≠‡∏ö
MainFrame.Position = UDim2.new(0.1, 0, 0.1, 0)
MainFrame.Size = UDim2.new(0, 220, 0, 260)
MainFrame.Active = true
MainFrame.Draggable = true -- ‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏•‡∏≤‡∏Å‡πÄ‡∏°‡∏ô‡∏π‡πÑ‡∏õ‡∏°‡∏≤‡πÑ‡∏î‡πâ

UICorner.CornerRadius = UDim.new(0, 12)
UICorner.Parent = MainFrame

-- ‡∏´‡∏±‡∏ß‡∏Ç‡πâ‡∏≠‡πÄ‡∏°‡∏ô‡∏π
Title.Parent = MainFrame
Title.Text = "ü•∑ ‡πÄ‡∏°‡∏ô‡∏π‡∏ô‡∏¥‡∏ô‡∏à‡∏≤‡∏´‡∏°‡∏µ‡πà‡∏Å‡∏£‡∏≠‡∏ö üü£"
Title.Size = UDim2.new(1, 0, 0, 40)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.GothamBold
Title.TextSize = 16

-- 1. ‡∏ä‡πà‡∏≠‡∏á‡πÉ‡∏™‡πà‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß (‡∏Å‡∏≥‡∏´‡∏ô‡∏î‡πÑ‡∏î‡πâ‡πÑ‡∏°‡πà‡πÄ‡∏Å‡∏¥‡∏ô 1,000)
SpeedInput.Parent = MainFrame
SpeedInput.PlaceholderText = "‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß (‡πÑ‡∏°‡πà‡πÄ‡∏Å‡∏¥‡∏ô 1000)"
SpeedInput.Text = ""
SpeedInput.Position = UDim2.new(0.1, 0, 0.2, 0)
SpeedInput.Size = UDim2.new(0.8, 0, 0, 35)
SpeedInput.BackgroundColor3 = Color3.fromRGB(80, 20, 110)
SpeedInput.TextColor3 = Color3.fromRGB(255, 255, 255)
SpeedInput.FocusLost:Connect(function()
    local value = tonumber(SpeedInput.Text)
    if value then
        value = math.clamp(value, 0, 1000) -- ‡∏•‡πá‡∏≠‡∏Ñ‡πÑ‡∏ß‡πâ‡πÑ‡∏°‡πà‡πÉ‡∏´‡πâ‡πÄ‡∏Å‡∏¥‡∏ô 1000
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = value
        SpeedInput.Text = "‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß: " .. tostring(value)
    end
end)

-- 2. ‡∏õ‡∏∏‡πà‡∏°‡∏ß‡∏≤‡∏£‡πå‡∏õ‡πÑ‡∏õ‡∏´‡∏≤‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô (Teleport)
TPButton.Parent = MainFrame
TPButton.Text = "üìç ‡∏ß‡∏≤‡∏£‡πå‡∏õ‡πÑ‡∏õ‡∏´‡∏≤‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô"
TPButton.Position = UDim2.new(0.1, 0, 0.4, 0)
TPButton.Size = UDim2.new(0.8, 0, 0, 35)
TPButton.BackgroundColor3 = Color3.fromRGB(130, 50, 180)
TPButton.TextColor3 = Color3.fromRGB(255, 255, 255)
TPButton.MouseButton1Click:Connect(function()
    for _, player in pairs(game.Players:GetPlayers()) do
        if player ~= game.Players.LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = player.Character.HumanoidRootPart.CFrame
            break -- ‡∏ß‡∏≤‡∏£‡πå‡∏õ‡πÑ‡∏õ‡∏´‡∏≤‡∏Ñ‡∏ô‡πÅ‡∏£‡∏Å‡∏ó‡∏µ‡πà‡πÄ‡∏à‡∏≠‡πÉ‡∏ô‡∏•‡∏¥‡∏™‡∏ï‡πå
        end
    end
end)

-- 3. ‡∏õ‡∏∏‡πà‡∏°‡∏°‡∏≠‡∏á‡πÄ‡∏´‡πá‡∏ô‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô (ESP)
ESPButton.Parent = MainFrame
ESPButton.Text = "üëÅÔ∏è ‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î ‡∏Å‡∏≤‡∏£‡∏°‡∏≠‡∏á‡πÄ‡∏´‡πá‡∏ô"
ESPButton.Position = UDim2.new(0.1, 0, 0.6, 0)
ESPButton.Size = UDim2.new(0.8, 0, 0, 35)
ESPButton.BackgroundColor3 = Color3.fromRGB(130, 50, 180)
ESPButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ESPButton.MouseButton1Click:Connect(function()
    for _, player in pairs(game.Players:GetPlayers()) do
        if player ~= game.Players.LocalPlayer and player.Character then
            if not player.Character:FindFirstChild("NinjaHighlight") then
                local hl = Instance.new("Highlight")
                hl.Name = "NinjaHighlight"
                hl.Parent = player.Character
                hl.FillColor = Color3.fromRGB(180, 100, 255) -- ‡∏™‡∏µ‡∏°‡πà‡∏ß‡∏á‡∏™‡∏ß‡πà‡∏≤‡∏á
                hl.OutlineColor = Color3.fromRGB(255, 255, 255)
            else
                player.Character.NinjaHighlight:Destroy()
            end
        end
    end
end)

-- 4. ‡∏õ‡∏∏‡πà‡∏°‡∏•‡πá‡∏≠‡∏Ñ‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢ (Lock On)
LockButton.Parent = MainFrame
LockButton.Text = "üéØ ‡∏•‡πá‡∏≠‡∏Ñ‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢"
LockButton.Position = UDim2.new(0.1, 0, 0.8, 0)
LockButton.Size = UDim2.new(0.8, 0, 0, 35)
LockButton.BackgroundColor3 = Color3.fromRGB(130, 50, 180)
LockButton.TextColor3 = Color3.fromRGB(255, 255, 255)
LockButton.MouseButton1Click:Connect(function()
    local target = nil
    local shortestDistance = math.huge
    
    for _, p in pairs(game.Players:GetPlayers()) do
        if p ~= game.Players.LocalPlayer and p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
            local distance = (p.Character.HumanoidRootPart.Position - game.Players.LocalPlayer.Character.HumanoidRootPart.Position).Magnitude
            if distance < shortestDistance then
                shortestDistance = distance
                target = p
            end
        end
    end
    
    if target then
        workspace.CurrentCamera.CFrame = CFrame.new(workspace.CurrentCamera.CFrame.Position, target.Character.HumanoidRootPart.Position)
    end
end)
